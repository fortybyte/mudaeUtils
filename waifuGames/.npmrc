# npm configuration for cross-platform compatibility

# Use exact versions to ensure consistency across platforms
save-exact=false

# Set the shell for scripts (git bash on Windows, default shell elsewhere)
script-shell=

# Disable package-lock for yarn users (remove this line if using npm)
# package-lock=false

# Engine strict mode
engine-strict=false

# Progress bar
progress=true

# Audit level
audit-level=moderate

# Registry
registry=https://registry.npmjs.org/

# Cache settings
prefer-offline=true
cache-min=3600